<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:id="@+id/second_img"
            android:layout_width="120dp"
            android:layout_height="160dp" />

        <LinearLayout
            android:id="@+id/image_layout1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/second_img"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/second_img_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/second_img_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignBottom="@id/second_img"
            android:layout_toRightOf="@id/second_img">

            <ImageView
                android:id="@+id/second_img_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/second_img_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignBottom="@id/image_layout1"
            android:layout_toRightOf="@id/second_img"
            android:background="#000000" />

        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="240dp"
            android:background="#000000" />

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/second_img"
            android:layout_toRightOf="@id/second_img"
            android:background="#000000" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/second_img_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/second_img_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:layout_width="0.3dp"
            android:layout_height="match_parent"
            android:background="#000000"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</LinearLayout>